pipeline {
    agent any

    stages {
        stage("Job1") {
            steps {

                sh '''
                     $PWD
                     ls -lrt
                     cd $PWD/scripts
                     chmod 777 job1.sh job2.sh
                     ./job1.sh
                 '''
            }
        }

        stage("Job2") {
            steps {
                sh 'cd $WORKSPACE/scripts'
                sh "./scripts/job2.sh"
            }
        }
        
    }
}
